<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/good_prosearch"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey_1000"
    app:cardElevation="4dp"
    android:checkable="true"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/proserch_ggg">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_margin="1dp"
                    android:id="@+id/good_prosearch_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/no_photo" />
            </FrameLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/prosearch_mainline">

            </androidx.appcompat.widget.LinearLayoutCompat>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible"
                />
        </LinearLayout>
        <Button
            android:id="@+id/good_prosearch_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:text="@string/detail_buy"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:backgroundTint="@color/green_600"
            app:strokeColor="@color/grey_1000"
            app:strokeWidth="1dp"
            app:icon="@drawable/ic_add_shopping_black"
            app:iconTint="@color/white"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>